set tabstop=4
set shiftwidth=4
set autoindent
set smartindent
set number
set ruler
set noswapfile
set nowritebackup
set backspace=indent,eol,start
set showmatch
set scrolloff=5
set mouse=a
set fileencoding=utf-8
set cursorline
set whichwrap=b,s,h,l,<,>,[,]

nnoremap j gj
nnoremap k gk
nnoremap gj j
nnoremap gk k

inoremap <silent> jj <Esc>

colorscheme molokai
syntax on
